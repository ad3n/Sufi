{% extends 'layout.html.twig' %}

{% block title %}{% apply spaceless %}{{ title | upper }}{% endapply %}{% endblock %}

{% block page_title %}{% apply spaceless %}{{ title }}{% endapply %}{% endblock %}

{% block content %}{% apply spaceless %}
{% set totalOrder = total_order() %}
{% set totalRevenue = total_revenue() %}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body margin-10">
                <div class="row">
                    <h3 class="box-title">Total Kredit: Rp. {{ totalOrder | number_format(0, ',', '.') }}</h3>
                </div>
                <div class="row">
                    <h3 class="box-title">Total Revenue: Rp. {{ totalRevenue | number_format(0, ',', '.') }}</h3>
                </div>
                <div class="row">
                    <h3 class="box-title">Total Selisih: Rp. {{ (totalOrder - totalRevenue) | number_format(0, ',', '.') }}</h3>
                </div>
            </div>
        </div>
    </div>
</div>
{% endapply %}{% endblock %}
