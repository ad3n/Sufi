{% extends 'layout.html.twig' %}

{% block title %}{% apply spaceless %}{{ title | upper }}{% endapply %}{% endblock %}

{% block page_title %}{% apply spaceless %}{{ title }}{% endapply %}{% endblock %}

{% block content %}{% apply spaceless %}
{% set totalOrder = total_order() %}
{% set totalRevenue = total_revenue() %}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body margin-10">
                <div class="row">
                    <h3 class="box-title">Total Kredit: Rp. {{ totalOrder | number_format(0, ',', '.') }}</h3>
                </div>
                <div class="row">
                    <h3 class="box-title">Total Revenue: Rp. {{ totalRevenue | number_format(0, ',', '.') }}</h3>
                </div>
                <div class="row">
                    <h3 class="box-title">Total Selisih: Rp. {{ (totalOrder - totalRevenue) | number_format(0, ',', '.') }}</h3>
                </div>
                <div class="row">
                    <table id="table-content" class="table table-responsive no-padding table-bordered table-hover table-striped">
                        <thead>
                        <tr>
                            <th class="text-center" style="width: 49px;">No</th>
                            <th class="text-center">{{ 'label.report.year' | trans }}</th>
                            <th class="text-center">{{ 'label.report.month' | trans }}</th>
                            <th class="text-center">{{ 'label.report.revenue' | trans }}</th>
                        </tr>
                        </thead>
                        <tbody class="table-content">
                        {% set defaultYear = date() | date('Y') %}
                        {% set year = app.request.query.get('y', defaultYear) %}
                        {% set revenue = revenue_per_month(year) %}
                        {% set grandTotal = 0 %}
                        {% for i, data in revenue %}
                            {% set grandTotal = grandTotal + data.total %}
                            <tr>
                                <td class="text-right">{{ i + 1 }}</td>
                                <td class="text-right">{{ data.tahun }}</td>
                                <td class="text-right">{{ data.bulan }}</td>
                                <td class="text-right">Rp. {{ data.total | number_format(0, ',', '.')}}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2" class="text-right"><b>Total</b></td>
                                <td colspan="2" class="text-right">Rp. {{ grandTotal | number_format(0, ',', '.')}}</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endapply %}{% endblock %}
